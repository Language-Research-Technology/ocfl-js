{
  "name": "@ocfl/ocfl",
  "version": "0.1.3",
  "description": "Oxford Common File Layout (OCFL) JS library",
  "main": "index.js",
  "exports": {
    ".": [
      {
        "import": "./index.mjs",
        "require": "./index.js",
        "default": "./index.js"
      },
      "./index.js"
    ]
  },
  "scripts": {
    "test": "mocha",
    "preversion": "npm test",
    "version": "echo 'version'",
    "postversion": "echo 'postversion'",
    "build-docs": "jsdoc -c jsdoc.json"
  },
  "keywords": [
    "ocfl",
    "Oxford Common File Layout",
    "preservation",
    "storage"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arkisto-Platform/ocfl-js.git"
  },
  "author": "Alvin Sebastian (https://orcid.org/0000-0002-9086-1722)",
  "contributors": [
    "Moises Sacal Bonequi (https://orcid.org/0000-0002-4438-2755)",
    "Peter Sefton (https://orcid.org/0000-0002-3545-944X)"
  ],
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.33",
    "clean-jsdoc-theme": "^3.3.4",
    "jsdoc": "^3.6.10",
    "mocha": "^10.0.0"
  },
  "mocha": {
    "extension": [
      ".spec.js",
      ".spec.cjs",
      ".spec.mjs"
    ],
    "recursive": true
  },
  "dependencies": {
    "blake2": "^4.1.1"
  },
  "bugs": {
    "url": "https://github.com/Arkisto-Platform/ocfl-js/issues"
  },
  "homepage": "https://github.com/Arkisto-Platform/ocfl-js#readme",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [ "index.js", "index.mjs", "lib", "resources" ]
}
