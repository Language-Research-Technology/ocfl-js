{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "..",
    "module": "CommonJS",
    "target": "es2022",
    "outDir": "dist",
    "typeRoots": ["lib/**/*.d.ts"]
  },
  "include": [
    "index.js",
    "index.mjs",
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],
  "typedocOptions": {
    "entryPoints": "index.mjs",
    "out": "./docs"
  }
}