{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "..",
    "module": "CommonJS",
    "target": "es2022",
    "outDir": "./types",
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "include": [
    "index.js",
    "lib/**/*.js"
  ],
  "exclude": [
    "./types/**/*",
  ],
  "typedocOptions": {
    "entryPoints": "index.mjs",
    "out": "./docs"
  }
}
