{
  "env": {
    "node": true,
    "es2022": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "airbnb-base"
  ],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": [
    "@typescript-eslint",
    "mocha"
  ],
  "rules": {
    "max-len": ["warn", { "code": 180 }],
    "import/prefer-default-export": "off",
    "no-unused-vars": "off",
    "import/extensions": ["error", "ignorePackages", {
      "js": "never",
      "ts": "never"
    }]
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  }
}
